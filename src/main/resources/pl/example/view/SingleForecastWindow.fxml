<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainVBox" alignment="TOP_CENTER" prefHeight="490.0" prefWidth="420.0" style="-fx-background-color: #caf0f8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>


      <Label fx:id="titleLabel" contentDisplay="BOTTOM" text="Default title">
         <font>
            <Font size="24.0" />
         </font>
      </Label>


      <HBox prefHeight="48.0" prefWidth="460.0">
         <children>
            <TextField fx:id="cityName" prefHeight="42.0" prefWidth="367.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <Button fx:id="checkWeather" mnemonicParsing="false" onAction="#checkWeatherAction" prefHeight="37.0" prefWidth="150.0" text="Zatwierdź">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>


      <Label fx:id="errorLabel" />


      <BorderPane fx:id="detailedWeatherDisplay" prefHeight="105.0" prefWidth="400.0" style="-fx-border-color: grey; -fx-border-radius: 5;">
         <top>
            <VBox prefHeight="41.0" prefWidth="389.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="localisationValue" />
                  <Label fx:id="dayDateValue" />
               </children>
               <BorderPane.margin>
                  <Insets left="5.0" top="5.0" />
               </BorderPane.margin>
            </VBox>
         </top>
         <left>
            <HBox prefHeight="87.0" prefWidth="143.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="temperatureValue" />
                  <ImageView fx:id="imageView" fitHeight="87.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" left="5.0" />
               </BorderPane.margin>
            </HBox>
         </left>
         <right>
            <VBox alignment="TOP_RIGHT" prefHeight="80.0" prefWidth="175.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="TOP_RIGHT" prefHeight="14.0" prefWidth="175.0">
                     <children>
                        <Label text="Zachmurzenie:" />
                        <Label fx:id="cloudinessValue" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="11.0" prefWidth="175.0">
                     <children>
                        <Label text="Ryzyko opadów:" />
                        <Label fx:id="precipitationValue" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="11.0" prefWidth="175.0">
                     <children>
                        <Label text="Wilgotność:" />
                        <Label fx:id="humidityValue" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="11.0" prefWidth="175.0">
                     <children>
                        <Label text="Ciśnienie:" />
                        <Label fx:id="pressureValue" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" prefHeight="11.0" prefWidth="175.0">
                     <children>
                        <Label text="Wiatr:" />
                        <Label fx:id="windSpeedValue" />
                     </children>
                  </HBox>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" right="5.0" />
               </BorderPane.margin>
            </VBox>
         </right>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </BorderPane>


      <HBox fx:id="hourlyWeatherDisplay" prefHeight="100.0" prefWidth="200.0">
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </HBox>


      <HBox fx:id="dailyWeatherDisplay" prefHeight="91.0" prefWidth="367.0">
      </HBox>



   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
